{
  "compilerOptions": {
    "target": "esnext",
    "lib": [ "esnext", ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "outDir": ".out",
    "incremental": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
